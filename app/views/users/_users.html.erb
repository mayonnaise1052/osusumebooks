<div class="row">
  <aside class="col-sm-2">
    <div class="alert alert-info" role="alert">
      <h2>Users</h2>
    </div>
  </aside>
  <div class="col-sm-8">
    <% if users.any? %>
      <ul class="list-unstyled">
        <% users.each do |user| %>
          <li class="mb-3 d-flex">
            <div>
              <div>
                <%= user.name %>
              </div>
              <div>
                <p><%= link_to 'View profile', user_path(user), class: "text-decoration-none" %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>